{
    "name": "goalgorilla/social_template",
    "description": "Social project template for composer based Open Social projects.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4.0",
        "goalgorilla/open_social": "~11.0.0",
        "monolog/monolog": "^2.3.5",
        "drush/drush": "^10.3",
        "drupal/field_permissions": "^1.1",
        "drupal/contact_block": "^1.5",
        "drupal/views_data_export": "^1.0",
        "drupal/twig_field_value": "^2.0",
        "drupal/google_analytics": "^3.1",
        "drupal/taxonomy_menu": "^3.4",
        "drupal/block_class": "^1.3",
        "drupal/config_ignore": "^2.3",
        "itk-dev/web_accessibility_statement": "dev-master",
        "drupal/honeypot": "^2.0",
        "drupal/system_status": "^2.9",
        "drupal/captcha": "^1.1",
        "drupal/hierarchical_taxonomy_menu": "^1.42",
        "drupal/antibot": "^1.4",
        "drupal/memcache": "^2.3",
        "drupal/social_api": "^3.0",
        "drupal/social_auth": "^3.0",
        "drupal/social_auth_facebook": "^3.0",
        "drupal/social_auth_google": "^3.0",
        "drupal/field_group": "^3.0",
        "drupal/message_notify": "^1.2"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "check-coding-standards/phpcs": [
            "vendor/bin/phpcs --standard=phpcs.xml.dist"
        ],
        "check-coding-standards": [
            "@check-coding-standards/phpcs"
        ],
        "apply-coding-standards/phpcs": [
            "vendor/bin/phpcbf --standard=phpcs.xml.dist"
        ],
        "apply-coding-standards": [
            "@apply-coding-standards/phpcs"
        ],
        "pre-install-cmd": [
            "mkdir -p html/profiles/contrib/social/themes"
        ],
        "post-install-cmd": [
            "ln -fs ../../profiles/contrib/social/themes/gin/ html/themes/contrib/gin",
            "ln -fs ../../profiles/contrib/social/themes/socialbase/ html/themes/contrib/socialbase",
            "ln -fs ../../profiles/contrib/social/themes/socialblue/ html/themes/contrib/socialblue"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "html/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "html/core": [
                "drupal/core"
            ],
            "html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "html/profiles/contrib/social": [
                "goalgorilla/open_social"
            ],
            "html/profiles/contrib/social/themes/{$name}": [
                "drupal/gin",
                "drupal/socialbase",
                "drupal/socialblue"
            ],
            "html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "goalgorilla/open_social": {
                "Disable two post update functions": "patches/disable-post-update.patch",
                "Disable caching of invite group action": "patches/disable_invite_action_caching.patch"
            },
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/2107455": "https://www.drupal.org/files/issues/2022-04-01/2107455-72.patch"
            }
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "drupal/coder": "^8.3.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true,
            "zaporylie/composer-drupal-optimizations": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
