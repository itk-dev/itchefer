{
    "name": "goalgorilla/social_template",
    "description": "Social project template for composer based Open Social projects.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4.0",
        "goalgorilla/open_social": "~10.1.1",
        "monolog/monolog": "^1.17",
        "drush/drush": "^10.3",
        "drupal/field_permissions": "^1.1",
        "drupal/contact_block": "^1.5",
        "drupal/views_data_export": "^1.0",
        "drupal/twig_field_value": "^2.0",
        "drupal/google_analytics": "^3.1",
        "drupal/taxonomy_menu": "^3.4",
        "drupal/block_class": "^1.3",
        "drupal/config_ignore": "^2.3",
        "itk-dev/web_accessibility_statement": "dev-master",
        "drupal/honeypot": "^2.0",
        "drupal/system_status": "^2.9",
        "drupal/captcha": "^1.1",
        "drupal/hierarchical_taxonomy_menu": "^1.42",
        "drupal/antibot": "^1.4",
        "drupal/memcache": "^2.3",
        "drupal/social_api": "1.1",
        "drupal/social_auth": "1.0",
        "drupal/social_auth_extra": "1.x-dev",
        "drupal/social_auth_facebook": "1",
        "drupal/social_auth_google": "1",
        "drupal/social_search_autocomplete": "^1.2",
        "drupal/field_group": "^3.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
      "check-coding-standards/phpcs": [
        "vendor/bin/phpcs --standard=phpcs.xml.dist"
      ],
      "check-coding-standards": [
        "@check-coding-standards/phpcs"
      ],
      "apply-coding-standards/phpcs": [
         "vendor/bin/phpcbf --standard=phpcs.xml.dist"
      ],
      "apply-coding-standards": [
         "@apply-coding-standards/phpcs"
      ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "html/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "html/core": [
                "drupal/core"
            ],
            "html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "html/profiles/contrib/social": [
                "goalgorilla/open_social"
            ],
            "html/profiles/contrib/social/themes/{$name}": [
                "drupal/gin",
                "drupal/socialbase",
                "drupal/socialblue"
            ],
            "html/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "goalgorilla/open_social": {
                "Disable two post update functions": "disable-post-update.patch"
            }
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "drupal/coder": "^8.3.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
    }
}
